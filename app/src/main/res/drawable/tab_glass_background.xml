<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#88FFFFFF"
                android:startColor="#CCFFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#99FFFFFF" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <item
        android:bottom="18dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#00FFFFFF"
                android:startColor="#7AFFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#33A9C3E8" />
            <corners android:radius="17dp" />
        </shape>
    </item>
</layer-list>
